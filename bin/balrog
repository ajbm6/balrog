#!/bin/bash
# Amazing static site generator
# Works for PHP and HTML sites
# Assumes web root to be in /web

PORT=9999
TARGET=static

php -S localhost:$PORT -t web web/index.php >/dev/null &
PID=$!
sleep 0.1
rm -rf $TARGET
wget -r -l inf --no-remove-listing --adjust-extension -nH --no-use-server-timestamps -nc -nv -P $TARGET http://localhost:$PORT
kill $PID
